{
  // Automatically format code when you save a file
  // This ensures consistent code style across the project without manual formatting
  "editor.formatOnSave": true,
  // Prettier-specific settings
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "prettier.enable": true,
  // Set Prettier as the default formatter for all files
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Configure code actions that run automatically when saving
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // TypeScript import preference settings
  "typescript.preferences.importModuleSpecifier": "non-relative"
}
